@{
	ViewData["Title"] = "AuthorList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Yazar Listesi</h3>

<html>
<body class="hold-transition sidebar-mini">
	<!-- Site wrapper -->
	<div class="wrapper">
		<!-- Navbar -->
		<!-- Main content -->
		<section class="content">
			<!-- Default box -->
			<div class="card card-solid">
				<div class="card-body pb-0">
					<div class="row d-flex align-items-stretch">
						@foreach (Author item in Model)
						{
							<div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
								<div class="card bg-light">
									<div class="card-header text-muted border-bottom-0">
										@item.AuthorTitle
									</div>
									<div class="card-body pt-0">
										<div class="row">
											<div class="col-7">
												<h2 class="lead"><b>@item.AuthorName</b></h2>
												<p class="text-muted text-sm"><b>About: </b> @item.AboutShort </p>
												<ul class="ml-4 mb-0 fa-ul text-muted">
													<li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> E-Mail: @item.AuthorMail</li>
													<li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone #: @item.PhoneNumber</li>
												</ul>
											</div>
											<div class="col-5 text-center">
												<img src="@item.AuthorImage" alt="" class="img-circle img-fluid">
											</div>
										</div>
									</div>
									<div class="card-footer">
										<div class="text-right">
											<a asp-action="UserBlogList" asp-controller="Admin" class="btn btn-sm bg-teal">
												<i class="fas fa-comments">Blogları</i>
											</a>
											<a asp-action="EditAuthor" asp-controller="Author" asp-route-id="@item.AuthorID" class="btn btn-sm btn-primary">
												<i class="fas fa-user"></i> Profili Güncelle
											</a>
										</div>
									</div>
								</div>
							</div>
						}
					</div>

				</div>
			</div>
			<!-- /.card -->
		</section>
		<!-- /.content -->
	</div>
	<!-- /.control-sidebar -->
</body>
</html>
<a asp-action="AddAuthor" asp-controller="Author" class="btn btn-primary"><i class="bi bi-plus-lg"></i> Yazar Ekle</a>

