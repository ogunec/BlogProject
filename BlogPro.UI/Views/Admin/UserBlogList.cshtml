@model IEnumerable<Blog>
@{
	ViewData["Title"] = "UserBlogList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
<body class="hold-transition sidebar-mini">
	<!-- Main content -->
	<section class="content">
		<!-- Default box -->
		<div class="card">
			<div class="card-header">
				<h3 class="card-title">Blog Listesi</h3>
				<div class="card-tools">
					<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
						<i class="fas fa-minus"></i>
					</button>
					<button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
						<i class="fas fa-times"></i>
					</button>
				</div>
			</div>
			<div class="card-body p-0">
				<table class="table table-striped projects">
					<thead>
						<tr>
							<th style="width: 5%">
								ID
							</th>
							<th style="width: 40%">
								Blog Başlığı
							</th>
							<th style="width: 10%">
								Yazar
							</th>
							<th>
								Tarih
							</th>
							<th style="width: 15%" class="text-center">
								Kategori
							</th>
							<th style="width: 30%">
								Fonksiyonlar
							</th>
						</tr>
					</thead>
					<tbody>
						@foreach (Blog item in Model)
						{


							<tr>
								<td>@item.BlogID</td>
								<td>
									<a>
										@item.BlogTitle
									</a>
								</td>
								<td>
									<img alt="Avatar" class="table-avatar" src="@item.Author.AuthorImage">
								</td>
								<td>@item.BlogDate.ToShortDateString()</td>
								<td class="project-state">
									<span class="badge badge-success">@item.Category.CategoryName</span>
								</td>
								<td class="project-actions text-left">
									<a class="btn btn-primary btn-sm" asp-action="BlogDetails" asp-controller="Blog" asp-route-id="@item.BlogID">
										<i class="fas fa-folder">
										</i>
										Görüntüle
									</a>
									<a class="btn btn-info btn-sm" asp-action="UpdateBlog" asp-controller="Admin" asp-route-id="@item.BlogID">
										<i class="fas fa-pencil-alt">
										</i>
										Düzenle
									</a>
									<a class="btn btn-danger btn-sm" asp-action="DeleteBlog" asp-controller="Admin" asp-route-id="@item.BlogID">
										<i class="fas fa-trash">
										</i>
										Sil
									</a>
									<a class="btn btn-secondary btn-sm" asp-action="GetCommentsByBlog" asp-controller="Admin" asp-route-id="@item.BlogID">
										<i class="bi bi-chat-fill">
										</i>
										Yorumlar
									</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
			<!-- /.card-body -->
		</div>
		<!-- /.card -->
	</section>
</body>
</html>

