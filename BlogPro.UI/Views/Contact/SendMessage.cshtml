<div class="col-md-7 mb-5">
	<form method="post" class="p-5 bg-white">


		<div class="row form-group">
			<div class="col-md-6 mb-3 mb-md-0">
				<label class="text-black" for="fname">İsim</label>
				<input type="text" id="fname" name="FirstName" class="form-control">
			</div>
			<div class="col-md-6">
				<label class="text-black" for="lname">Soy İsim</label>
				<input type="text" id="lname" name="LastName" class="form-control">
			</div>
		</div>

		<div class="row form-group">

			<div class="col-md-12">
				<label class="text-black" for="email">Mail</label>
				<input type="email" id="email" name="Mail" class="form-control">
			</div>
		</div>

		<div class="row form-group">

			<div class="col-md-12">
				<label class="text-black" for="subject">Konu</label>
				<input type="text" id="subject" name="Subject" class="form-control">
			</div>
		</div>

		<div class="row form-group">
			<div class="col-md-12">
				<label class="text-black" for="message">Mesaj</label>
				<textarea name="Message" id="message" cols="30" rows="7" class="form-control" placeholder="Mesaj, öneri veya şikayetinizi buraya yazabilirsiniz"></textarea>
			</div>
		</div>

		<div class="row form-group">
			<div class="col-md-12">
				<input type="submit" asp-action="SendMessage" asp-controller="Contact" value="Mesaj Gönder" class="btn btn-primary py-2 px-4 text-white">
			</div>
		</div>


	</form>
</div>
