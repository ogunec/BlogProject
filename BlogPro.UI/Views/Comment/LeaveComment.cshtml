
<div class="comment-form-wrap pt-5">
	<h3 class="mb-5">Bir yorum yazınız</h3>
	<form method="post" class="p-5 bg-light">
		<div class="form-group">
			<label for="name">İsim *</label>
			<input type="text" class="form-control" name="UserName">
		</div>
		<div class="form-group">
			<label for="email">Mail *</label>
			<input type="email" class="form-control" name="Mail">
		</div>
		<input type="hidden" name="CommentDate" value="@DateTime.Now.ToString()"/>
		<input type="hidden" name="BlogID" value="@Model"/>
		<div class="form-group">
			<label for="message">Mesaj</label>
			<textarea name="CommentText" cols="30" rows="10" class="form-control"></textarea>
		</div>
		<div class="form-group">
			<input type="submit" asp-action="LeaveComment" asp-controller="Comment" value="Gönder" class="btn btn-primary">
		</div>

	</form>
</div>

