@model IEnumerable<About>
@{
	ViewData["Title"] = "AdminAboutList";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
<body class="hold-transition sidebar-mini">
	<!-- Main content -->
	<section class="content">
		<div class="row">
			<div class="col-md-12">
				<div class="card card-primary">
					<div class="card-header">
						<h3 class="card-title">Hakkımızda</h3>
						<div class="card-tools">
							<button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
								<i class="fas fa-minus"></i>
							</button>
						</div>
					</div>
					<form method="post" class="form-group">

						<div class="card-body">
							@foreach (About item in Model)
							{
								<div class="form-group">
									<label for="inputName">Görsel-1</label>
									<input type="text" name="AboutImage1" class="form-control" value="@item.AboutImage1">
								</div>
								<div class="form-group">
									<label for="inputName">Görsel-2</label>
									<input type="text" name="AboutImage2" class="form-control" value="@item.AboutImage2">
								</div>
								<div class="form-group">
									<label for="inputDescription">İçerik-1</label>
									<textarea name="AboutContent1" class="form-control" rows="4">@item.AboutContent1</textarea>
								</div>
								<div class="form-group">
									<label for="inputDescription">İçerik-2</label>
									<textarea name="AboutContent2" class="form-control" rows="4">@item.AboutContent2</textarea>
								</div>
								<div class="form-group">
									<input name="AboutID" value="@item.AboutID" type="hidden" />
								</div>
							}
							<button type="submit" asp-action="UpdateAbout" asp-controller="About" class="btn btn-success">Güncelle</button>
						</div>
					</form>
					<!-- /.card-body -->
				</div>
				<!-- /.card -->
			</div>
		</div>
	</section>
</body>
</html>